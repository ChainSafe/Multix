{
  "env": {
    "es2021": true
  },
  "extends": [
    "prettier",
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "tsconfigRootDir": "./",
    "project": "./tsconfig.json"
  },
  "rules": {
    "indent": [
      "error",
      2
    ]
  },
  "ignorePatterns": [
    "db/**/*",
    "src/types/**/*",
    "src/model/generated/**/*"
  ]
}